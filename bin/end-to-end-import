#!/usr/bin/env ruby
APP_PATH = File.expand_path('../../config/application',  __dir__)
require_relative '../config/boot'
require_relative '../config/environment'
require "benchmark"

unless ARGV.size == 1
  puts "Usage: #{__FILE__} path/to/csvs/directory"
  exit 1
end

input_path = ARGV[0]

input_dir = "#{Rails.root}/data/input"
ona_dir = "#{Rails.root}/#{input_path}/ona"

# Run facilities
system("#{Rails.root}/bin/convert-from-ona #{ona_dir} #{input_dir}")
if $?.exitstatus != 0
  exit 1
end

system("#{Rails.root}/bin/generate-facility-categories #{input_dir}")
if $?.exitstatus != 0
  exit 1
end

system("#{Rails.root}/bin/import-dataset #{input_dir}")
if $?.exitstatus != 0
  exit 1
end