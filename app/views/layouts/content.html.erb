<% content_for :body do %>
  <%= javascript_include_tag "MainMenu" %>
  <script>
    window.FPP = {
      settings: <%= raw(@js_flags.to_json) %>
    }
  </script>
  <header>
    <div id="elm-menu">
    </div>
  </header>
  <main>
    <section class="content">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </section>
  </main>
  <footer>
    <section class="content">
      <span class="right">version: <%= Rails.application.config.version_name %></span>
    </section>
  </footer>
<% end %>
<%= render template: "layouts/application" %>
